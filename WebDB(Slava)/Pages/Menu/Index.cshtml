@page
@model WebDB_Slava_.Pages.Menu.IndexModel

@{
    ViewData["Title"] = "Меню";
}

<h1>Меню</h1>

<p>
    <a asp-page="Create">Добавить меню</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Name_dish)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Cooking_time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Volume_Ingredient_1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Volume_Ingredient_2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Volume_Ingredient_3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Cost)
            </th>
            <td>
                @Html.DisplayNameFor(model => model.Menu[0].Ingredient_1)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Menu[0].Ingredient_2)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Menu[0].Ingredient_3)
            </td>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Menu) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name_dish)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Cooking_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume_Ingredient_1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume_Ingredient_2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume_Ingredient_3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @{ try
                    {
        <a asp-page="../Warehouses/Details" asp-route-id="@item.ID_Ingredient_1" style="color: #000; text-decoration: none;">
            @Model.Warehouse.First(r => r.ID == item.ID_Ingredient_1).Name_Ingredient
        </a> }
    catch
    {
        <p>нет</p> } }
            </td>
            <td>
                @{ try
                    {
                    <a asp-page="../Warehouses/Details" asp-route-id="@item.ID_Ingredient_2" style="color: #000; text-decoration: none;">
                        @Model.Warehouse.First(r => r.ID == item.ID_Ingredient_2).Name_Ingredient
                    </a> }
    catch
    {
        <p>нет</p> } }
            </td>
            <td>
                @{ try
                    {
                    <a asp-page="../Warehouses/Details" asp-route-id="@item.ID_Ingredient_3" style="color: #000; text-decoration: none;">
                        @Model.Warehouse.First(r => r.ID == item.ID_Ingredient_3).Name_Ingredient
                    </a> }
    catch
    {
        <p>нет</p> } }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Редактирование</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Подробности</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Удаление</a>
            </td>
        </tr>
}
    </tbody>
</table>
