@page
@model WebDB_Slava_.Pages.Positions.IndexModel

@{
    ViewData["Title"] = "Должности";
}

<h1>Должности</h1>

<p>
    <a asp-page="Create">Добавить "Должность"</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Name_Positions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Responsibilities)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Requirements)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Position) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name_Positions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Responsibilities)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requirements)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Редактирование</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Дополнительно</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Удаление</a>
            </td>
        </tr>
}
    </tbody>
</table>
