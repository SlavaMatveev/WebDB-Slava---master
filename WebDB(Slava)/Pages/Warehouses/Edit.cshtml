@page
@model WebDB_Slava_.Pages.Warehouses.EditModel

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактирование</h1>

<h4>Склад</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Warehouse.ID" />
            <div class="form-group">
                <label asp-for="Warehouse.Shelf_life" class="control-label"></label>
                <input asp-for="Warehouse.Shelf_life" class="form-control" />
                <span asp-validation-for="Warehouse.Shelf_life" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Warehouse.Name_Ingredient" class="control-label"></label>
                <input asp-for="Warehouse.Name_Ingredient" class="form-control" />
                <span asp-validation-for="Warehouse.Name_Ingredient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Warehouse.Incept_date" class="control-label"></label>
                <input asp-for="Warehouse.Incept_date" class="form-control" />
                <span asp-validation-for="Warehouse.Incept_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Warehouse.Volume" class="control-label"></label>
                <input asp-for="Warehouse.Volume" class="form-control" />
                <span asp-validation-for="Warehouse.Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Warehouse.Producer" class="control-label"></label>
                <input asp-for="Warehouse.Producer" class="form-control" />
                <span asp-validation-for="Warehouse.Producer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Warehouse.Cost" class="control-label"></label>
                <input asp-for="Warehouse.Cost" class="form-control" />
                <span asp-validation-for="Warehouse.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранение" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
